@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@model LibraryManagementSystem.Models.UserDetail

@{
    var email = HttpContextAccessor.HttpContext.Session.GetString("EmailID");
}




@{


    ViewData["Title"] = "Details";


}


<header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light  ">
            <div class="container-fluid">
                <img src="https://th.bing.com/th/id/OIP.c7gLBJpEuUBJ0qsmkcCQgwAAAA?pid=ImgDet&rs=1" style="height:60px;width:140px"  alt="LOGO">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse  justify-content-between">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b>Home</b></a>
                        </li></ul>
                          <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ">
                     <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="UserLogOut"><b>LogOut</b></a>
                     </li>
                    </ul>
                </div>
                         
                        </div>
                  
            </div>
        </nav>
    </header>

<div class="profile-container">

  <div class="profile-picture">
    <img src="~/images/@Model.ProfilePicture" style="height:400px;width:700px" alt="Profile Picture">
  </div>

  <div class="profile-info">
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <ul>
      <li><strong>Register No:</strong> @Html.DisplayFor(model => model.RegisterNo)</li>
      <li><strong>Email:</strong> @Html.DisplayFor(model => model.EmailID)</li>
      <li><strong>Gender:</strong> @Html.DisplayFor(model => model.Gender)</li>
      <li><strong>Age:</strong> @Html.DisplayFor(model => model.Age)</li>
      <li><strong>Address:</strong> @Html.DisplayFor(model => model.Address)</li>
      <li><strong>Phone:</strong> @Html.DisplayFor(model => model.PhoneNumber)</li>
    </ul>
  </div>

</div>

<div>
    <a asp-action="UserHomePage">Back to Home</a>
</div>


